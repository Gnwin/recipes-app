<h1>Recipes#index</h1>
<p>Find me in app/views/recipes/index.html.erb</p>

<%= button_to 'Add recipe', '/recipes/new', method: :get  %>

  <% @recipes.each do |recipe| %>
    <a href="/recipes/<%=recipe.id%>">
        <div>
          <%= recipe.name %>
        </div>
        <div>
          <%= recipe.description %>
        </div>
        <%= link_to "Remove", destroy_recipe_path(recipe.id), data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
      <hr>
    </a>
  <% end %>

